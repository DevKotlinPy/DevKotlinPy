<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.nuevo.nuevo_Caso_Fragment">

    <LinearLayout
        android:id="@+id/llnuevoCaso"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">


        <TextView
            android:id="@+id/tvnCaso"
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:gravity="center"
            android:text="Nuevo Caso"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginVertical="5dp"
            android:ems="10"
            android:inputType="time"

            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilnuevo"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:paddingVertical="5dp"
            android:hint="Número de solicitud">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tetnuevo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:digits="abcdefghijklñmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ-_1234567809"
                android:ems="10"
                android:inputType="textWebEmailAddress|textEmailAddress"
                android:maxLength="40"
                android:textAlignment="center"
                android:textColor="#000" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


</FrameLayout>